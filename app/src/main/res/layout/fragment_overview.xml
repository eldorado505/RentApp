<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OverviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">
        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"

                android:paddingRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_baseline_location_on_24"/>
                <TextView
                    android:id="@+id/address_card"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Palm Meadows,Near Makrba railway crossing,Vejalpur PrahaldNagar"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:paddingRight="17dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_baseline_king_bed_24"/>
                <TextView
                    android:id="@+id/bhk_card"

                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"/>
                <TextView

                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BHK"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:paddingRight="17dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_baseline_aspect_ratio_24"/>
                <TextView
                    android:id="@+id/area_card"
                    android:layout_marginTop="5dp"

                    android:padding="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="14dp"
                    android:layout_marginRight="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1300"/>
                <TextView

                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sqrt"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:paddingRight="17dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Distance - "
                    android:textAlignment="center"
                    android:fontFamily="@font/gotham"


                    android:textColor="#19256A"
                    android:gravity="center_horizontal" />
                <TextView

                    android:id="@+id/distance_card"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"/>
                <TextView


                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:fontFamily="@font/gotham"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"/>
                <LinearLayout

                    android:layout_marginLeft="25dp"
                    android:paddingRight="17dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham"
                        android:textSize="15dp"
                        android:text="Rent - "
                        android:textAlignment="center"


                        android:textColor="#19256A"
                        android:gravity="center_horizontal" />
                    <TextView

                        android:padding="5dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="@font/gotham"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR"/>
                    <TextView
                        android:id="@+id/rent_card"


                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:fontFamily="@font/gotham"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20,000"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView

            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_margin="25dp"
            app:strokeColor="#19256A"
            app:strokeWidth="2dp"
            android:layout_gravity="center_horizontal"
            >
            <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                app:layout_constraintTop_toBottomOf="@id/details_layout"


                android:layout_width="300dp"
                android:layout_height="200dp"

                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="1dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/map_intent"
            app:icon="@drawable/ic_baseline_map_24"
            app:iconTint="#19256A"
            android:text="Direction"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:backgroundTint="#A0C8E8"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>






</FrameLayout>